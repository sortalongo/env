# This is Git's per-user configuration file.
[user]
 	name = Dan Sotolongo
 	email = dsotolongo@google.com
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
  pager = less
[alias]
	a = add --all
	ai = add -i
  b = branch --sort=-committerdate --format='%(color:green)%(committerdate:relative)%(color:reset):  %(refname:short)'
	c = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	cd = commit --amend
	cad = commit -a --amend
	d = diff
	dc = diff --cached
	dl = diff HEAD~1 HEAD
	ds = diff --stat
	dcs = diff --cached --stat
	g = grep -p
	l = log --oneline --color
	lg = log --oneline --graph --decorate --color
	log = log --color
	o = checkout
	ob = checkout -b
	s = status
[branch]
	autosetuprebase = always
